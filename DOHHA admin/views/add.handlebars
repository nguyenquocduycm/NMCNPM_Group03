<div id="content">

    <form>
        <div class="add-form-group">
            <h2>Create Post</h2>
        </div>
        <div class="add-form-group">
            <label for="exampleFormControlInput1">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name of title">
        </div>
        <div class="add-form-group">
            <label for="exampleFormControlSelect1">Type of post</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <option>Phone - Tablet</option>
                <option>Laptop-Computer</option>
                <option>Accessories-Digital devices</option>
                <option>Electric Appliances</option>
                <option>Consumer goods - Food</option>
                <option>Fashion - Cosmetics</option>
                <option>Toys</option>
                <option>Sports - Picnic</option>
                <option>Bike-Motobike-Car</option>
                <option>Book</option>
            </select>
        </div>
        <div class="add-form-group">
            <label for="exampleFormControlFile1">File input</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
        </div>
        <div class="add-form-group">
            <label for="exampleFormControlTextarea1">Content</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="btnSubmit">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
    </form>

</div>
